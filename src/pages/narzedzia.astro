---
// src/pages/narzedzia.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CTA from '../sections/CTA.astro';
import Footer from '../components/Footer.astro';
const pageTitle = "Narzędzia dla firm – kategorie, opisy, przykłady użycia | BiznesWizytowka.pl";
const metaDescription =
  "Przegląd narzędzi dla firm pogrupowanych w kategorie: automatyzacja, zarządzanie, współpraca, grafika. Opisy, zastosowania, przykłady użycia i FAQ. W tym Email Sort Pro.";

// --- DEFINICJE TYPÓW DLA TYPESCRIPT ---
type FirstPartyTool = {
  id: string; name: string; tagline: string;
  image: { src: string; alt: string; };
  description: string; helps: string; features: string[];
  examples: string[]; forWhom: string[]; planNote: string;
  downloadHref: string; buyHref: string;
};

type ExternalTool = {
  id: string; name: string; tagline: string;
  description: string; helps: string; features: string[];
  examples: string[]; forWhom: string[]; url: string;
};

type CategoryTool = 
  | { type: 'firstParty', data: FirstPartyTool } 
  | { type: 'external', data: ExternalTool };

type Category = {
  id: string; name: string; tools: CategoryTool[];
};
// -----------------------------------------


const emailSort: FirstPartyTool = {
  id: "email-sort-pro",
  name: "Email Sort Pro",
  tagline: "Automatyczne pobieranie i porządkowanie załączników z e‑maili.",
  image: { src: "/gfx/Email-Sort-Pro.png", alt: "Email Sort Pro – automatyczne pobieranie i sortowanie załączników" },
  description: `Program desktopowy, który automatycznie pobiera załączniki z dowolnego konta e‑mail (IMAP/POP3) i porządkuje je według Twoich zasad. Możesz filtrować pliki po dacie, typie, nadawcy lub pobrać wszystkie – a następnie posegregować je w strukturze: Rodzaj dokumentu → Data → Pliki.`,
  helps: "Oszczędza czas na ręcznym pobieraniu, redukuje pomyłki i utrzymuje stały porządek w dokumentach dla księgowości, HR czy obsługi zamówień.",
  features: [
    "Pobieranie załączników z dowolnego konta e‑mail (IMAP/POP3)", "Filtry: data, typ pliku, nadawca lub pobierz wszystkie",
    "Automatyczne sortowanie: kategoria → data → pliki", "Obsługa wielu skrzynek pocztowych", "Edytowalne filtry i słowa kluczowe (Pro)"
  ],
  examples: [
    "Księgowość: automatyczny odbiór faktur od kontrahentów do folderów miesięcznych", "HR: CV i dokumenty kandydatów segregowane wg ogłoszenia i daty",
    "Obsługa zamówień: specyfikacje i dokumenty klientów w jednym miejscu"
  ],
  forWhom: ["Księgowość", "HR/Recruitment", "Obsługa zamówień", "Właściciele SMB"],
  planNote: "Free: do 100 załączników/tydzień. Pro: bez limitów + filtry po nadawcy + edycja filtrów sortowania. Licencje: 3/6/12 mies. oraz dożywotnia.",
  downloadHref: "/app/email-sort-pro.zip",
  buyHref: "mailto:kontakt@bizneswizytowka.pl?subject=Licencja%20Email%20Sort%20Pro"
};

const thirdParty: { [key: string]: ExternalTool } = {
  clickup: {
    id: "clickup", name: "ClickUp", tagline: "Zarządzanie projektami i zadaniami.",
    description: "Wszechstronne planowanie, trackowanie i raportowanie pracy zespołów.",
    helps: "Porządkuje backlog, sprinty, kampanie i zadania operacyjne; redukuje chaos komunikacyjny.",
    features: ["Tablice Kanban", "Sprinty i backlog", "Cele/OKR", "Raportowanie czasu", "Automatyzacje"],
    examples: ["Agencja marketingowa: kampanie, kalendarz publikacji, feedback do kreacji", "Software house: sprinty, backlog, raportowanie czasu"],
    forWhom: ["Agencje", "Software/IT", "Marketing", "Zespoły zdalne"],
    url: "https://clickup.com"
  },
  notion: {
    id: "notion", name: "Notion", tagline: "Baza wiedzy, dokumenty i wiki firmowe.",
    description: "Elastyczne bloki stron, relacyjne bazy i widoki, które złożysz jak klocki.",
    helps: "Centralizuje informacje: procedury, checklisty, briefy, pipeline klientów.",
    features: ["Bazy danych", "Relacje i widoki", "Szablony", "Współpraca w czasie rzeczywistym"],
    examples: ["SMB: CRM w Notion z pipeline’em i przypomnieniami follow‑up", "HR: onboarding z checklistami i materiałami"],
    forWhom: ["SMB", "Freelancerzy", "HR", "Operacje"],
    url: "https://www.notion.so"
  },
  gws: {
    id: "google-workspace", name: "Google Workspace", tagline: "E‑mail, dysk, dokumenty i współpraca.",
    description: "Pakiet narzędzi do pracy zespołowej: Gmail, Drive, Docs, Sheets, Meet.",
    helps: "Ułatwia współtworzenie, wersjonowanie dokumentów i bezpieczne udostępnianie.",
    features: ["Gmail z własną domeną", "Dyski współdzielone", "Docs/Sheets", "Meet"],
    examples: ["Sprzedaż: arkusze ofert, szablony kalkulacji, spotkania Meet", "Mała firma: foldery dla działów, kontrola dostępu"],
    forWhom: ["Firmy każdej wielkości", "Zespoły zdalne", "Szkoły", "NGO"],
    url: "https://workspace.google.com"
  },
  canva: {
    id: "canva", name: "Canva", tagline: "Szybkie materiały graficzne.",
    description: "Prosty edytor grafiki z szablonami do social mediów, prezentacji i druków.",
    helps: "Przyspiesza tworzenie kreacji; spójność brandu dzięki brand‑kit.",
    features: ["Szablony", "Brand‑kit", "Współpraca", "Proste eksporty"],
    examples: ["Sklep online: grafiki produktowe, banery, stories", "Lokalna firma: ulotki, plakaty, wizytówki, menu"],
    forWhom: ["Marketing", "Sprzedaż", "Właściciele SMB", "E‑commerce"],
    url: "https://www.canva.com"
  },
  zapier: {
    id: "zapier", name: "Zapier", tagline: "Automatyzacja procesów między aplikacjami.",
    description: "Łączy ponad 6000 aplikacji webowych, pozwalając na tworzenie zautomatyzowanych przepływów pracy (Zaps) bez pisania kodu.",
    helps: "Eliminuje ręczne kopiowanie danych, automatyzuje powiadomienia i integruje narzędzia, które normalnie ze sobą nie rozmawiają.",
    features: ["Integracja 6000+ aplikacji", "Wizualny edytor (Zaps)", "Filtry i logika warunkowa", "Formatowanie danych"],
    examples: ["Automatyczne dodawanie leadów z Facebooka do CRM", "Powiadomienia na Slacku o nowych płatnościach w Stripe"],
    forWhom: ["Marketing", "Sprzedaż", "Operacje", "Właściciele SMB"],
    url: "https://zapier.com"
  },
  slack: {
    id: "slack", name: "Slack", tagline: "Komunikacja i współpraca w zespole.",
    description: "Platforma do komunikacji w czasie rzeczywistym oparta na kanałach, która zastępuje wewnętrzne e-maile i integruje się z innymi narzędziami.",
    helps: "Usprawnia przepływ informacji, organizuje dyskusje tematycznie i przyspiesza podejmowanie decyzji.",
    features: ["Kanały tematyczne", "Wątki", "Połączenia wideo (Huddles)", "Integracje z aplikacjami", "Wyszukiwarka archiwum"],
    examples: ["Kanał #marketing dla dyskusji o kampaniach", "Integracja z Gitem dla powiadomień o commitach"],
    forWhom: ["Zespoły zdalne", "Software/IT", "Agencje", "Startup-y"],
    url: "https://slack.com"
  },
  figma: {
    id: "figma", name: "Figma", tagline: "Projektowanie i prototypowanie interfejsów w zespole.",
    description: "Narzędzie do projektowania UI/UX działające w przeglądarce, stworzone z myślą o współpracy w czasie rzeczywistym.",
    helps: "Umożliwia wspólną pracę nad projektami, tworzenie interaktywnych prototypów i łatwe przekazywanie specyfikacji deweloperom.",
    features: ["Współpraca w czasie rzeczywistym", "Interaktywne prototypy", "Auto Layout i komponenty", "Tryb deweloperski (Dev Mode)", "FigJam (tablice online)"],
    examples: ["Projektowanie aplikacji mobilnej od A do Z", "Warsztaty online na tablicach FigJam"],
    forWhom: ["UI/UX Designers", "Product Managers", "Deweloperzy", "Agencje kreatywne"],
    url: "https://www.figma.com"
  }
};

const categories: Category[] = [
  {
    id: "automatyzacja", name: "Automatyzacja",
    tools: [ { type: "firstParty", data: emailSort }, { type: "external", data: thirdParty.zapier } ]
  },
  { 
    id: "zarzadzanie", name: "Zarządzanie", 
    tools: [{ type: "external", data: thirdParty.clickup }] 
  },
  { 
    id: "wspolpraca", name: "Współpraca", 
    tools: [ { type: "external", data: thirdParty.gws }, { type: "external", data: thirdParty.notion }, { type: "external", data: thirdParty.slack }, { type: "external", data: thirdParty.figma } ] 
  },
  { 
    id: "grafika", name: "Grafika", 
    tools: [ { type: "external", data: thirdParty.canva }, { type: "external", data: thirdParty.figma } ] 
  },
  { id: "faq", name: "FAQ", tools: [] }
];

const pageOg = "/og/tools-og.jpg";
---

<Layout title={pageTitle} description={metaDescription} ogImage={pageOg}>
  <Header />
  <main>
    <section class="pt-32 pb-20 text-center overflow-hidden">
      <div class="relative z-10 text-center px-4 w-full md:w-5/6 lg:w-4/5 mx-auto">
        <h1 id="page-hero-title" class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
          Narzędzia, które oszczędzają Twój czas
        </h1>
        <p id="page-hero-subtitle" class="mt-6 text-lg text-secondary">
          Pogrupowane w kategorie, z jasnymi opisami <em>co to jest</em>, <em>jak pomaga w firmie</em> i <em>jak używać</em>. Wszystko w jednym miejscu, aby łatwo dobrać właściwe rozwiązania do konkretnych zadań.
        </p>
      </div>
    </section>

    <section class="pb-8" data-anim="tabs-section">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative">
          <div
            role="tablist"
            aria-label="Kategorie narzędzi"
            id="tab-list-container"
            class="flex flex-col sm:flex-row gap-2 sm:gap-2 sm:overflow-x-auto overflow-visible no-scrollbar border-b border-white/10 pb-2"
          >
            <div class="tab-indicator absolute bottom-[-1px] h-0.5 bg-gradient-to-r from-accent-start to-accent-end rounded-full sm:block hidden"></div>
            {categories.map((cat, i) => (
              <button
                id={`tab-${cat.id}`}
                role="tab"
                data-tab={cat.id}
                aria-selected={i === 0 ? "true" : "false"}
                class:list={[
                  "tab-btn text-left whitespace-nowrap px-4 py-3 text-sm sm:text-base font-medium rounded-xl transition-colors duration-300",
                  i === 0 ? "bg-surface/60 text-primary" : "bg-surface/40 text-secondary hover:text-primary hover:bg-white/10"
                ]}
              >
                {cat.name}
              </button>
            ))}
          </div>
          <div id="tab-scroll-fade" class="absolute top-0 right-0 bottom-0 w-16 bg-gradient-to-l from-background to-transparent pointer-events-none lg:hidden opacity-0 sm:opacity-0"></div>
        </div>
      </div>
    </section>

    <section class="pb-20 sm:pb-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-anim="panels-container">
        {categories.map((cat, i) => (
          <div
            id={`panel-${cat.id}`}
            role="tabpanel"
            aria-labelledby={`tab-${cat.id}`}
            class:list={["tab-panel fade-panel", i !== 0 && "hidden"]}
          >
            {cat.id !== "faq" ? (
              <div class="space-y-8 pt-8" id="tools-accordion-container">
                {cat.tools.map((tool) => (
                  <details id={`tool-${tool.data.id}`} class="group tool-accordion bg-surface/50 border border-white/10 rounded-2xl overflow-hidden">
                    <summary class="flex items-start gap-4 p-6 cursor-pointer list-none transition-colors hover:bg-white/5">
                      {tool.type === "firstParty" ? (
                        <img src={tool.data.image.src} alt={tool.data.image.alt} width="48" height="48" class="w-12 h-12 rounded-lg border border-white/10 flex-shrink-0" loading="lazy" decoding="async" />
                      ) : (
                        <div class="w-12 h-12 rounded-lg border border-white/10 bg-black/20 flex items-center justify-center text-primary text-xl font-bold flex-shrink-0">
                          {tool.data.name.charAt(0)}
                        </div>
                      )}
                      <div class="flex-1">
                        <h2 class="text-xl md:text-2xl font-bold text-primary">{tool.data.name}</h2>
                        <p class="text-secondary mt-1">{tool.data.tagline}</p>
                      </div>
                      <svg width="20" height="20" viewBox="0 0 24 24" class="accordion-icon mt-1.5 flex-shrink-0 transition-transform duration-300 ease-in-out text-secondary" data-icon-state="plus" aria-hidden="true">
                        <path class="icon-plus" d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        <path class="icon-minus hidden" d="M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                      </svg>
                    </summary>

                    <div class="accordion-content overflow-hidden">
                      <div class="px-6 pb-6 border-t border-white/10">
                        <div class="text-secondary leading-relaxed pt-6">
                          <p><strong class="text-primary font-semibold">Co to jest?</strong><br/>{tool.data.description}</p>
                          <p class="mt-4"><strong class="text-primary font-semibold">Jak pomaga w biznesie?</strong><br/>{tool.data.helps}</p>
                        </div>

                        <div class="mt-8 grid lg:grid-cols-3 gap-6">
                          <div class="rounded-xl bg-background/50 border border-white/10 p-6">
                            <h3 class="text-lg font-semibold text-primary">Najważniejsze funkcje</h3>
                            <ul class="mt-4 space-y-2.5 text-secondary">
                              {(tool.data.features || []).map((f) => (
                                <li class="flex items-start gap-3">
                                  <svg class="w-4 h-4 mt-1 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 16 16"><path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/></svg>
                                  <span>{f}</span>
                                </li>
                              ))}
                            </ul>
                          </div>
                          <div class="rounded-xl bg-background/50 border border-white/10 p-6">
                            <h3 class="text-lg font-semibold text-primary">Przykłady użycia</h3>
                            <ul class="mt-4 space-y-2.5 text-secondary">
                              {(tool.data.examples || []).map((ex) => (
                                <li class="flex items-start gap-3">
                                  <svg class="w-4 h-4 mt-1 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M3.5 2a.5.5 0 0 0-.5.5v11a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354l-3-3a.5.5 0 0 0-.354-.146H3.5zM4 3h5.5v3h3V13H4V3z"/></svg>
                                  <span>{ex}</span>
                                </li>
                              ))}
                            </ul>
                          </div>
                          <div class="rounded-xl bg-background/50 border border-white/10 p-6 flex flex-col">
                            <h3 class="text-lg font-semibold text-primary">Dla kogo</h3>
                            <ul class="mt-4 flex flex-wrap gap-2">
                              {(tool.data.forWhom || []).map((tag) => (
                                <li class="px-3 py-1 rounded-full bg-white/5 text-secondary text-sm">{tag}</li>
                              ))}
                            </ul>
                            <div class="mt-auto pt-6">
                              {tool.type === "firstParty" ? (
                                <>
                                  <div class="flex flex-col sm:flex-row gap-3">
                                    <a href={tool.data.downloadHref} class="inline-flex items-center justify-center px-5 py-3 rounded-lg bg-surface hover:bg-white/10 transition text-primary font-medium border border-white/10">
                                      Pobierz program
                                    </a>
                                    <a href={tool.data.buyHref} class="inline-flex items-center justify-center px-5 py-3 rounded-lg bg-primary hover:brightness-110 transition text-background font-semibold">
                                      Wykup licencję
                                    </a>
                                  </div>
                                  <p class="text-xs text-secondary mt-3">{tool.data.planNote}</p>
                                </>
                              ) : (
                                <a href={tool.data.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-primary hover:text-accent-start font-semibold transition-colors group/link">
                                  Otwórz {tool.data.name}
                                  <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="flex-shrink-0 transition-transform group-hover/link:translate-x-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                  </svg>
                                </a>
                              )}
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </details>
                ))}
              </div>
            ) : (
              <div class="bg-surface/50 border border-white/10 p-8 rounded-2xl mt-8">
                <h2 class="text-2xl md:text-3xl font-bold text-primary mb-10 text-center">Najczęściej zadawane pytania</h2>
                <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-x-12 gap-y-8">
                  <div><h3 class="text-xl font-semibold text-primary">Czy Email Sort Pro działa z każdym klientem pocztowym?</h3><p class="mt-2 text-secondary">Tak. Program łączy się z dowolnym kontem e‑mail (IMAP/POP3), niezależnie od używanego klienta.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy wersja darmowa jest ograniczona czasowo?</h3><p class="mt-2 text-secondary">Nie. Wersja Free nie ma limitu czasu – obowiązuje limit 100 załączników tygodniowo.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Jak kupić licencję Pro?</h3><p class="mt-2 text-secondary">Tymczasowo przez <a href="/kontakt?temat=Licencja%20Email%20Sort%20Pro" class="text-primary hover:underline">formularz kontaktowy</a>. Wersja sklepu będzie dostępna wkrótce.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy mogę łączyć kilka kont e‑mail?</h3><p class="mt-2 text-secondary">Tak. Program obsługuje wiele skrzynek jednocześnie, co ułatwia pracę zespołową.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy Email Sort Pro działa na Windows i macOS?</h3><p class="mt-2 text-secondary">Tak, obsługiwane są oba systemy (szczegóły wymagań – w instrukcji pobrania).</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy program może działać cyklicznie lub w tle?</h3><p class="mt-2 text-secondary">Tak. Uruchamiaj ręcznie lub cyklicznie (np. harmonogram systemowy).</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy narzędzia firm trzecich są płatne?</h3><p class="mt-2 text-secondary">Większość ma plany darmowe i płatne. Polecam zacząć od Free i rozszerzać w miarę potrzeb.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy te narzędzia mogę wdrożyć w mojej firmie samodzielnie?</h3><p class="mt-2 text-secondary">Tak, ale przy większej skali lepiej zaplanować strukturę, uprawnienia i automatyzacje – mogę w tym pomóc.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Na jakiej podstawie dobierasz narzędzia do listy?</h3><p class="mt-2 text-secondary">Priorytet: użyteczność w SMB, łatwość wdrożenia, dobra dokumentacja, rozsądny koszt i stabilny rozwój produktu.</p></div>
                  <div><h3 class="text-xl font-semibold text-primary">Czy oferujesz wdrożenie i szkolenie z narzędzi?</h3><p class="mt-2 text-secondary">Tak – konfiguracja, szablony, automatyzacje, szkolenie zespołu. Napisz w <a class="text-primary hover:underline" href="/kontakt">kontakcie</a>.</p></div>
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
    </section>
    <CTA />
  </main>
  <Footer />
