---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CTA from '../sections/CTA.astro';
import Footer from '../components/Footer.astro';
const pageTitle = "Usługi: tworzenie stron, sklepów i aplikacji | Mateusz Gacek";
const metaDescription = "Projektuję strony www, sklepy internetowe i aplikacje (web, SaaS, desktop). Nowoczesne technologie, wydajność i SEO — rozwiązania, które mogą wspierać rozwój Twojego biznesu.";
const servicesData = [
  {
    id: 'strony-i-sklepy',
    title: "Strony i Sklepy Internetowe",
    description: "Twoja cyfrowa wizytówka i potencjalny silnik sprzedaży. Tworzę strony i sklepy, które łączą estetykę z wydajnością i mogą wspierać konwersję, szybkość oraz widoczność w Google.",
    features: [
      "Nowoczesne strony (Astro, Next.js) i CMS (WordPress)",
      "Zaawansowane sklepy e-commerce (WooCommerce, dedykowane)",
      "Integracje płatności, rezerwacji i formularzy",
      "Pełna optymalizacja SEO i dobre wyniki w PageSpeed",
      "Aktualne standardy bezpieczeństwa"
    ],
    timeline: "2 – 8 tygodni",
    iconSrc: "/gfx/Strony-i-Sklepy-Internetowe.png",
    altText: "Ikona usługi: tworzenie stron i sklepów internetowych"
  },
  {
    id: 'aplikacje',
    title: "Aplikacje Szyte na Miarę",
    description: "Od koncepcji po wdrożenie – buduję dedykowane aplikacje webowe, SaaS, desktopowe i mobilne, które automatyzują procesy, rozwiązują realne problemy i mogą dawać przewagę konkurencyjną.",
    features: [
      "Aplikacje SaaS (Software as a Service) z modelem subskrypcyjnym",
      "Niestandardowe aplikacje webowe i panele administracyjne",
      "Aplikacje desktopowe (Windows, macOS) i mobilne (iOS, Android)",
      "Zaawansowane narzędzia online (kalkulatory, konfiguratory)"
    ],
    timeline: "3 – 9+ miesięcy",
    iconSrc: "/gfx/Aplikacje-Szyte-na-Miare.png",
    altText: "Ikona usługi: dedykowane aplikacje webowe, SaaS i desktop"
  },
  {
    id: 'grafika',
    title: "Identyfikacja Wizualna",
    description: "Dbam o spójny wizerunek — od logotypów, przez materiały drukowane, po grafiki cyfrowe — aby ułatwić odbiór i rozpoznawalność marki.",
    features: [
      "Projektowanie logotypów i księgi znaków",
      "Projekty materiałów do druku (wizytówki, ulotki)",
      "Grafiki na potrzeby mediów społecznościowych",
      "Obróbka zdjęć produktowych i wzorce dokumentów"
    ],
    timeline: "1 – 3 tygodnie",
    iconSrc: "/gfx/Identyfikacja-Wizualna.png",
    altText: "Ikona usługi: identyfikacja wizualna i projekty graficzne"
  },
  {
    id: 'opieka',
    title: "Opieka i Wsparcie Techniczne",
    description: "Kompleksowa opieka techniczna, która pomaga utrzymać bezpieczeństwo, aktualność i niezawodność Twoich stron i aplikacji — z jasną komunikacją i monitoringiem.",
    features: [
      "Stała opieka i monitoring 24/7 (Support Retainer)",
      "Administracja i zabezpieczanie WordPress / WooCommerce",
      "Audyty bezpieczeństwa, wydajności i SEO",
      "Modernizacje i naprawy istniejących stron",
      "Doradztwoologiczne"
    ],
    timeline: "Usługa ciągła",
    iconSrc: "/gfx/Opieka-i-Wparcie-Techniczne.png",
    altText: "Ikona usługi: opieka i wsparcie techniczne"
  }
];
---

<Layout title={pageTitle} description={metaDescription}>
  <Header />
  <main>
    <nav class="sr-only" aria-label="okruszki">
      <ol>
        <li><a href="/">Strona główna</a></li>
        <li aria-current="page">Usługi</li>
      </ol>
    </nav>

    <section class="pt-32 pb-20 text-center">
      <div class="relative z-10 text-center px-4 w-full md:w-5/6 lg:w-4/5 mx-auto">
        <h1 id="page-hero-title" class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
          Nowoczesne Rozwiązania Cyfrowe dla Twojego Biznesu
        </h1>
        <p id="page-hero-subtitle" class="mt-6 text-lg text-secondary">
          Od szybkich stron internetowych, przez aplikacje szyte na miarę, po stałe wsparcie techniczne — zobacz, jak moje rozwiązania mogą wspierać rozwój Twojej firmy.
        </p>
      </div>
    </section>

    <section id="uslugi" class="pb-20 sm:pb-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-16">
          <aside class="hidden lg:block">
            <nav class="lg:sticky top-24" aria-label="nawigacja po usługach">
              <ul class="space-y-4">
                {servicesData.map(service => (
                  <li>
                    <a href={`#${service.id}`} class="service-nav-link text-secondary hover:text-primary transition-colors duration-300" data-link-id={service.id}>
                      {service.title}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </aside>

          <div class="lg:col-span-2 space-y-16">
            {servicesData.map(service => (
              <article id={service.id} class="service-content-card bg-surface/50 border border-white/10 p-8 rounded-2xl" itemscope itemtype="https://schema.org/Service">
                <meta itemprop="serviceType" content={service.title} />
                <div class="flex items-center gap-4">
                  <img src={service.iconSrc} alt={service.altText} width="40" height="40" loading="lazy" decoding="async" class="w-10 h-10" itemprop="image" />
                  <h2 class="text-2xl font-bold text-primary" itemprop="name">{service.title}</h2>
                </div>
                <p class="mt-4 text-secondary leading-relaxed" itemprop="description">{service.description}</p>
                <h3 class="mt-8 mb-4 text-sm font-semibold text-primary uppercase tracking-wider">W ramach tej usługi:</h3>
                <ul class="space-y-2">
                  {service.features.map(feature => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-green-400 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                      </svg>
                      <span class="text-secondary">{feature}</span>
                    </li>
                  ))}
                </ul>
                <div class="mt-8 pt-6 border-t border-white/10">
                  <h4 class="text-sm text-secondary">Typowy czas realizacji</h4>
                  <p class="text-lg font-semibold text-primary">{service.timeline}</p>
                </div>
                <div class="mt-6">
                  <a href="/kontakt" class="text-primary hover:underline font-medium">Zapytaj o wycenę</a>
                  <span class="text-secondary mx-2">•</span>
                  <a href="/portfolio" class="text-primary hover:underline font-medium">Zobacz realizacje</a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section id="faq" class="py-20 border-t border-white/10">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold tracking-tight mb-10 text-center">
          Najczęściej zadawane pytania
        </h2>
        <div class="space-y-8">
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Ile trwa stworzenie strony lub sklepu internetowego?
            </h3>
            <p class="mt-2 text-secondary">
              Standardowy czas realizacji projektu to od 2 do 8 tygodni, w zależności od zakresu i stopnia złożoności. Projekty e-commerce lub z indywidualnymi funkcjami mogą wymagać więcej czasu.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              W jakich technologiach realizowane są projekty?
            </h3>
            <p class="mt-2 text-secondary">
              Dobieram technologię do potrzeb projektu. Pracuję m.in. w HTML, CSS, JavaScript, PHP, Python, SQL, a także w frameworkach i narzędziach takich jak Next.js, Django, Astro, Tailwind CSS i WordPress.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Czy oferujesz wsparcie po wdrożeniu?
            </h3>
            <p class="mt-2 text-secondary">
              Tak, zapewniam opiekę i wsparcie techniczne w formie stałej współpracy lub pojedynczych zleceń. Obejmuje to aktualizacje, monitoring, optymalizacje i doradztwo.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Czy mogę zlecić modernizację istniejącej strony lub sklepu?
            </h3>
            <p class="mt-2 text-secondary">
              Tak. Wykonuję zarówno pełne przebudowy, jak i mniejsze modyfikacje — od zmian wizualnych po optymalizację szybkości, SEO i bezpieczeństwa.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Jak wygląda proces tworzenia projektu od strony klienta?
            </h3>
            <p class="mt-2 text-secondary">
              Zwykle zaczynamy od rozmowy o celach biznesowych, następnie przygotowuję wstępny plan i wycenę. Po akceptacji przechodzimy do projektowania, wdrożenia i testów, a na końcu szkolenia z obsługi.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Czy mogę otrzymać projekt w kilku językach?
            </h3>
            <p class="mt-2 text-secondary">
              Tak, tworzę strony i aplikacje w wersjach wielojęzycznych. Mogą one korzystać z ręcznych tłumaczeń lub integracji z systemami automatycznego tłumaczenia.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-primary">
              Jakie dodatkowe usługi mogę połączyć z wykonaniem strony?
            </h3>
            <p class="mt-2 text-secondary">
              W ramach współpracy mogę przygotować identyfikację wizualną, grafiki marketingowe, integracje z systemami CRM, narzędziami analitycznymi oraz wdrożyć automatyzacje procesów.
            </p>
          </div>
        </div>
      </div>
    </section>

    <CTA />
  </main>
  <Footer />
</Layout>



<style>
  /* Aktywny link w bocznym menu */
  .service-nav-link.active {
    color: #E2E2E2;
    font-weight: 600;
  }

  /* Korekta pozycji przy scrollowaniu do sekcji */
  article[id] {
    scroll-margin-top: calc(var(--header-height, 80px) + 24px);
  }
</style>